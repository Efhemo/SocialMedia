<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.efhem.socialmedia.ui.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_others" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.efhem.socialmedia.ui.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_others" />
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.efhem.socialmedia.ui.MainFragment"
        android:label="News Feed"
        tools:layout="@layout/fragment_others" />
    <fragment
        android:id="@+id/notificationFragment"
        android:name="com.efhem.socialmedia.ui.NotificationFragment"
        android:label="Notification"
        tools:layout="@layout/fragment_others" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.efhem.socialmedia.ui.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profileFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.efhem.socialmedia.ui.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />
</navigation>