<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SettingsFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/Acct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_16"
        android:text="ACCOUNT"
        android:textSize="@dimen/text_size_22"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/change_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_12"
        android:drawableStart="@drawable/ic_change_password"
        android:drawablePadding="@dimen/dimen_16"
        android:text="Change your password"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:layout_constraintLeft_toLeftOf="@id/Acct"
        app:layout_constraintTop_toBottomOf="@id/Acct" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/premium_upgrad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_12"
        android:drawableStart="@drawable/ic_person_add_black_24dp"
        android:drawablePadding="@dimen/dimen_16"
        android:text="Upgrade to Premium"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:layout_constraintLeft_toLeftOf="@id/change_password"
        app:layout_constraintTop_toBottomOf="@id/change_password" />


    <View
        android:id="@+id/line_1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_margin="@dimen/dimen_8"
        android:layout_marginTop="@dimen/dimen_20"
        android:background="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/premium_upgrad" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_16"
        android:text="ABOUT"
        android:textSize="@dimen/text_size_22"
        app:layout_constraintLeft_toLeftOf="@id/line_1"
        app:layout_constraintTop_toBottomOf="@id/line_1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/terms_of_use"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_12"
        android:drawableStart="@drawable/ic_note_add_black_24dp"
        android:drawablePadding="@dimen/dimen_16"
        android:text="Terms of Use"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:layout_constraintLeft_toLeftOf="@id/about"
        app:layout_constraintTop_toBottomOf="@id/about" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/lincense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_12"
        android:drawableStart="@drawable/ic_note_add_black_24dp"
        android:drawablePadding="@dimen/dimen_16"
        android:text="Licenses"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:layout_constraintLeft_toLeftOf="@id/terms_of_use"
        app:layout_constraintTop_toBottomOf="@id/terms_of_use" />


    <View
        android:id="@+id/line_2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_margin="@dimen/dimen_8"
        android:layout_marginTop="@dimen/dimen_12"
        android:background="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/lincense" />

</androidx.constraintlayout.widget.ConstraintLayout>